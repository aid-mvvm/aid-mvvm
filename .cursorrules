# Language Configuration
language: english

# Code Preferences
code:
  primary_language: javascript

# Formatting Rules
formatting:
  indent_style: space
  indent_size: 4
  end_of_line: lf
  insert_final_newline: true
  trim_trailing_whitespace: true
  max_line_length: off

# Exclusions
exclude:
  patterns:
    - .git/
    - .DS_Store
